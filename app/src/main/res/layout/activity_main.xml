<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2A3439"
    >


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-115dp"
        android:layout_marginBottom="185dp"
        android:src="@drawable/test"
        app:civ_border_width="2dp" />


    <com.marcinmoskala.arcseekbar.ArcSeekBar
        android:id="@+id/defaultSeekbar"
        android:layout_width="411dp"
        android:layout_height="171dp"
        android:layout_alignStart="@+id/profile_image"

        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="-155dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="0dp"
        android:rotation="-90"

        app:progressBackgroundColor="@color/background"
        app:progressBackgroundWidth="10dp"
        app:progress="50"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_above="@+id/profile_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="150dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="90dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="31dp"
        android:text="TextView" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="50dp"
        android:layout_width="100dp"
        android:layout_height="350dp"
        card_view:cardBackgroundColor="#5B676D"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="164dp"
        android:layout_toStartOf="@+id/profile_image">

    </android.support.v7.widget.CardView>


</RelativeLayout>